<div class="container location">
    <div class="col 9">
        <div class="divider"></div>
        <div class="section">
          <h5>Welcome to Wayfarer</h5>
        <div class="divider"></div>
          <p>make posts and share your favorite stories from cities all around the world.</p>
        </div>
    </div>

   <% locations.forEach(p => { %>
      <div class="row">
            <div class="col s12 m6">
              <div class="card hoverable">
                <div class="card-image">
                  <img src="<%= p.pic %>">
                  <span class="card-title"><%= p.city %></span>
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4"><i class="material-icons left"><a style="color: black;"href="/locations/<%= p._id %>">See Posts</a></i><br /></span>
                </div>
              </div>
            </div>
        </div>
        <% }) %>
      </div>



</div>


    
