<div class="container">
    <% if( loggedIn ){ %>
      <div class="col 9">
          <div class="divider"></div>
          <div class="section">
            <h5>Wayfarer</h5>
          <div class="divider"></div>
            <p>share your stories from all around the world.</p>
          </div>
      </div>
<% locations.forEach(p => { %>
<div class="row">
        <div class="col s12 m6">
          <div class="card hoverable">
            <div class="card-image">
              <img src="<%= p.pic %>">
              <span class="card-title"><%= p.city %></span>
              <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">+</i></a>
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4"><i class="material-icons left">more info</i><br /></span>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4"><%= p.city %></a><i class="material-icons right">close</i></span>
                <p>facts</p>
                <p><a href="/locations/<%= p._id %>">See Posts</a></p>  
            </div>
          </div>
        </div>
    </div>
    <% }) %>
    <% }else { %>
          <h4>you need to login.</h4>
    <% } %>
</div>